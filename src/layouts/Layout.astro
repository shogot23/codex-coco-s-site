---
interface Props {
  title: string;
}

const { title } = Astro.props;
const base = import.meta.env.BASE_URL;

const navItems = [
  { href: '', label: 'Home' },
  { href: 'gallery/', label: 'Gallery' },
  { href: 'videos/', label: 'Videos' },
  { href: 'reviews/', label: 'Reviews' },
];
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      :root { color-scheme: light; }
      body { margin: 0; font-family: ui-sans-serif, system-ui, -apple-system, "Hiragino Sans", "Noto Sans JP", "Segoe UI", sans-serif; background: #fafafa; color: #111; }
      a { color: inherit; text-decoration: none; }
      .container { max-width: 980px; margin: 0 auto; padding: 0 16px; }
      header { position: sticky; top: 0; background: rgba(250,250,250,.9); backdrop-filter: blur(10px); border-bottom: 1px solid rgba(0,0,0,.06); }
      .nav { display: flex; align-items: center; justify-content: space-between; height: 58px; }
      .brand { font-weight: 800; letter-spacing: .2px; }
      .links { display: flex; gap: 14px; font-size: .95rem; }
      .link { padding: 8px 10px; border-radius: 10px; }
      .link:hover { background: rgba(0,0,0,.05); }
      main { padding: 28px 0 40px; }
      footer { padding: 28px 0 40px; opacity: .7; font-size: .9rem; }
    </style>
  </head>
  <body>
    <header>
      <div class="container">
        <div class="nav">
          <a class="brand" href={base}>読書 with Coco</a>
          <nav class="links" aria-label="Primary">
            {navItems.map((i) => (
              <a class="link" href={`${base}${i.href}`}>{i.label}</a>
            ))}
          </nav>
        </div>
      </div>
    </header>

    <main>
      <div class="container">
        <slot />
      </div>
    </main>

    <footer>
      <div class="container">© {new Date().getFullYear()} 読書 with Coco</div>
    </footer>
  </body>
</html>
